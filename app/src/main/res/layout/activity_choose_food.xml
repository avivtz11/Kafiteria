<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="140">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="20"
        android:orientation="horizontal"
        android:id="@+id/bread"
        android:layout_margin="3dp"
        android:weightSum="60">

        <ImageButton
            android:layout_height="match_parent"
            android:layout_width="0dp"
            android:layout_weight="10"
            android:id="@+id/lahmania"
            android:src="@drawable/lahmania"
            android:scaleType="fitXY"
            android:onClick="hitBread"
            android:background="@android:color/holo_red_light"
            android:color="#ff0000"
            android:layout_marginRight="2dp"
            android:tag="לחמנייה"
            />

        <ImageButton
            android:layout_height="match_parent"
            android:layout_width="0dp"
            android:layout_weight="10"
            android:id="@+id/lahmaniac"
            android:src="@drawable/lahmaniac"
            android:scaleType="fitXY"
            android:onClick="hitBread"
            android:background="@android:color/transparent"
            android:color="#ff0000"
            android:layout_marginRight="2dp"
            android:tag="לחמנייה עגולה"
            />

        <ImageButton
            android:layout_height="match_parent"
            android:layout_width="0dp"
            android:layout_weight="10"
            android:id="@+id/shortbaget"
            android:src="@drawable/shortbaget"
            android:scaleType="fitXY"
            android:onClick="hitBread"
            android:background="@android:color/transparent"
            android:color="#ff0000"
            android:layout_marginRight="2dp"
            android:tag="באגט קצר"

            />
        <ImageButton
            android:layout_height="match_parent"
            android:layout_width="0dp"
            android:layout_weight="10"
            android:id="@+id/longbaget"
            android:src="@drawable/longbaget"
            android:scaleType="fitXY"
            android:onClick="hitBread"
            android:background="@android:color/transparent"
            android:color="#ff0000"
            android:layout_marginRight="2dp"
            android:tag="באגט ארוך"
            />
        <ImageButton
            android:layout_height="match_parent"
            android:layout_width="0dp"
            android:layout_weight="10"
            android:id="@+id/prusot"
            android:src="@drawable/prusot"
            android:scaleType="fitXY"
            android:onClick="hitBread"
            android:background="@android:color/transparent"
            android:color="#ff0000"
            android:layout_marginRight="2dp"
            android:tag="פרוסות לחם"
            />

        <ImageButton
            android:layout_height="match_parent"
            android:layout_width="0dp"
            android:layout_weight="10"
            android:id="@+id/pita"
            android:src="@drawable/pita"
            android:scaleType="fitXY"
            android:onClick="hitBread"
            android:background="@android:color/transparent"
            android:color="#ff0000"
            android:tag="פיתה"

            />
    </LinearLayout>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="20"
        android:orientation="horizontal"
        android:id="@+id/main_meal"
        android:layout_margin="3dp"
        android:weightSum="60">

        <ImageButton
            android:layout_height="match_parent"
            android:layout_width="0dp"
            android:layout_weight="10"
            android:id="@+id/meat"
            android:src="@drawable/meat"
            android:scaleType="fitXY"
            android:onClick="hitMain"
            android:background="@android:color/holo_red_light"
            android:color="#ff0000"
            android:layout_marginRight="2dp"
            android:tag="בשר"
            />

        <ImageButton
            android:layout_height="match_parent"
            android:layout_width="0dp"
            android:layout_weight="10"
            android:id="@+id/meat_ball"
            android:src="@drawable/meat_ball"
            android:scaleType="fitXY"
            android:onClick="hitMain"
            android:background="@android:color/transparent"
            android:color="#ff0000"
            android:layout_marginRight="2dp"
            android:tag="קציצות בשר"
            />

        <ImageButton
            android:layout_height="match_parent"
            android:layout_width="0dp"
            android:layout_weight="10"
            android:id="@+id/shnizel"
            android:src="@drawable/shnizel"
            android:scaleType="fitXY"
            android:onClick="hitMain"
            android:background="@android:color/transparent"
            android:color="#ff0000"
            android:layout_marginRight="2dp"
            android:tag="שניצל"
            />
        <ImageButton
            android:layout_height="match_parent"
            android:layout_width="0dp"
            android:layout_weight="10"
            android:id="@+id/hazeof"
            android:src="@drawable/hazeof"
            android:scaleType="fitXY"
            android:onClick="hitMain"
            android:background="@android:color/transparent"
            android:color="#ff0000"
            android:layout_marginRight="2dp"
            android:tag="חזה עוף"
            />
        <ImageButton
            android:layout_height="match_parent"
            android:layout_width="0dp"
            android:layout_weight="10"
            android:id="@+id/naknikia"
            android:src="@drawable/naknikia"
            android:scaleType="fitXY"
            android:onClick="hitMain"
            android:background="@android:color/transparent"
            android:color="#ff0000"
            android:layout_marginRight="2dp"
            android:tag="נקניקייה"
            />

        <ImageButton
            android:layout_height="match_parent"
            android:layout_width="0dp"
            android:layout_weight="10"
            android:id="@+id/falaphel"
            android:src="@drawable/falaphel"
            android:scaleType="fitXY"
            android:onClick="hitMain"
            android:background="@android:color/transparent"
            android:color="#ff0000"
            android:tag="פלאפל"

            />
    </LinearLayout>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="20"
        android:orientation="horizontal"
        android:id="@+id/tosafot"
        android:layout_margin="3dp"
        android:weightSum="60">

        <ImageButton
            android:layout_height="match_parent"
            android:layout_width="0dp"
            android:layout_weight="10"
            android:id="@+id/humus"
            android:src="@drawable/humus"
            android:scaleType="fitXY"
            android:onClick="hitTosafot"
            android:background="@android:color/holo_red_light"
            android:color="#ff0000"
            android:layout_marginRight="2dp"
            android:tag="חומוס"
            />

        <ImageButton
            android:layout_height="match_parent"
            android:layout_width="0dp"
            android:layout_weight="10"
            android:id="@+id/salat"
            android:src="@drawable/salat"
            android:scaleType="fitXY"
            android:onClick="hitTosafot"
            android:background="@android:color/transparent"
            android:color="#ff0000"
            android:layout_marginRight="2dp"
            android:tag="סלט"
            />

        <ImageButton
            android:layout_height="match_parent"
            android:layout_width="0dp"
            android:layout_weight="10"
            android:id="@+id/ships"
            android:src="@drawable/ships"
            android:scaleType="fitXY"
            android:onClick="hitTosafot"
            android:background="@android:color/transparent"
            android:color="#ff0000"
            android:layout_marginRight="2dp"
            android:tag="ציפס"
            />
        <ImageButton
            android:layout_height="match_parent"
            android:layout_width="0dp"
            android:layout_weight="10"
            android:id="@+id/thina"
            android:src="@drawable/thina"
            android:scaleType="fitXY"
            android:onClick="hitTosafot"
            android:background="@android:color/transparent"
            android:color="#ff0000"
            android:layout_marginRight="2dp"
            android:tag="טחינה"
            />
        <ImageButton
            android:layout_height="match_parent"
            android:layout_width="0dp"
            android:layout_weight="10"
            android:id="@+id/hazil"
            android:src="@drawable/hazil"
            android:scaleType="fitXY"
            android:onClick="hitTosafot"
            android:background="@android:color/transparent"
            android:color="#ff0000"
            android:layout_marginRight="2dp"
            android:tag="חציל"
            />

        <ImageButton
            android:layout_height="match_parent"
            android:layout_width="0dp"
            android:layout_weight="10"
            android:id="@+id/kruv"
            android:src="@drawable/kruv"
            android:scaleType="fitXY"
            android:onClick="hitTosafot"
            android:background="@android:color/transparent"
            android:color="#ff0000"
            android:tag="כרוב"

            />
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="15"
        android:orientation="horizontal"
        android:id="@+id/tavlinim"
        android:layout_margin="5dp"
        android:layout_gravity="right"
        >

        <CheckBox
            android:id="@+id/t1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="תבלין1"
            android:checked="false"
            android:onClick="tavlinim"
            android:background="#3bf4e1"
            android:layout_marginRight="3dp"
            android:tag="ת1"
            />

        <CheckBox
            android:id="@+id/t2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="תבלין2"
            android:checked="false"
            android:onClick="tavlinim"
            android:background="#ff281e"
            android:layout_marginRight="3dp"
            android:tag="ת2"
           />

        <CheckBox
            android:id="@+id/t3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="תבלין3"
            android:checked="false"
            android:onClick="tavlinim"
            android:background="#ff4e22"
            android:layout_marginRight="3dp"
            android:tag="ת3"
            />

        <CheckBox
            android:id="@+id/t4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="תבלין4"
            android:checked="false"
            android:onClick="tavlinim"
            android:background="#68bf15"
            android:layout_marginRight="3dp"
            android:tag="ת4"
            />

        <CheckBox
            android:id="@+id/peper"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="פלפל"
            android:checked="false"
            android:onClick="tavlinim"
            android:background="#7d000000"
            android:layout_marginRight="3dp"
            android:tag="פלפל"
            />

        <CheckBox
            android:id="@+id/salt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="מלח"
            android:checked="false"
            android:onClick="tavlinim"
            android:background="#2add194c"
            android:layout_marginRight="3dp"
            android:tag="מלח"
            />

        <CheckBox
            android:id="@+id/katshop"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="קטשופ"
            android:checked="false"
            android:onClick="tavlinim"
            android:background="#ff1e26"
            android:layout_marginRight="3dp"
            android:tag="קטשופ"
            />

        <CheckBox
            android:id="@+id/hardal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="חרדל"
            android:checked="false"
            android:onClick="tavlinim"
            android:background="#fff725"
            android:tag="חרדל"
            />
    </LinearLayout>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="15"
        android:orientation="horizontal"
        android:id="@+id/drinks"
        android:layout_margin="5dp"
        android:layout_gravity="right"
        >

        <CheckBox
            android:id="@+id/d1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="קולה"
            android:checked="false"
            android:onClick="drinks"
            android:background="#3bf4e1"
            android:layout_marginRight="3dp"
            android:tag="קולה"
            />

        <CheckBox
            android:id="@+id/d2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ספרייט"
            android:checked="false"
            android:onClick="drinks"
            android:background="#ff281e"
            android:layout_marginRight="3dp"
            android:tag="ספרייט"
            />

        <CheckBox
            android:id="@+id/d3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="קינלי"
            android:checked="false"
            android:onClick="drinks"
            android:background="#ff4e22"
            android:layout_marginRight="3dp"
            android:tag="קינלי"
            />

        <CheckBox
            android:id="@+id/d4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="תפוזים"
            android:checked="false"
            android:onClick="drinks"
            android:background="#68bf15"
            android:layout_marginRight="3dp"
            android:tag="תפוזים"
            />

        <CheckBox
            android:id="@+id/d5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ענבים"
            android:checked="false"
            android:onClick="drinks"
            android:background="#7d000000"
            android:layout_marginRight="3dp"
            android:tag="ענבים"
            />

        <CheckBox
            android:id="@+id/d6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="תפוחים"
            android:checked="false"
            android:onClick="drinks"
            android:background="#2add194c"
            android:layout_marginRight="3dp"
            android:tag="תפוחים"
            />

        <CheckBox
            android:id="@+id/d7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="מנגו"
            android:checked="false"
            android:onClick="drinks"
            android:background="#ff1e26"
            android:layout_marginRight="3dp"
            android:tag="מנגו"
            />

        <CheckBox
            android:id="@+id/d8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="תות"
            android:checked="false"
            android:onClick="drinks"
            android:background="#fff725"
            android:tag="תות"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="30"
        android:orientation="vertical"
        android:id="@+id/hazmana"
        android:layout_margin="5dp"
        android:layout_gravity="right"
        >
        <TextView
            android:layout_width="match_parent"
            android:id="@+id/my_hazmana"
            android:layout_height="wrap_content"
            android:textColor="@android:color/black"
            android:gravity="right"
            android:layout_gravity="right"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="3dp"
            android:textDirection="anyRtl"
            android:text="ההזמנה שלך :"
            android:background="#fffe4a">
        </TextView>
        <TextView
            android:layout_width="match_parent"
            android:id="@+id/my_tavlinim_drink"
            android:layout_height="wrap_content"
            android:textColor="@android:color/black"
            android:gravity="right"
            android:layout_gravity="right"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:textDirection="anyRtl"
            android:text="תבלינים ושתייה:"
            android:background="#fffe4a">
        </TextView>
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="20"
        android:orientation="horizontal"
        android:id="@+id/DOHAZMANA"
        android:layout_margin="5dp"
        android:layout_gravity="right"
        android:weightSum="100"
        >

        <Button
            android:id="@+id/ORDER"
            android:layout_width="0dp"
            android:layout_weight="37"
            android:layout_height="match_parent"
            android:text="צור הזמנה"
            android:onClick="sndmsg"
            android:layout_marginRight="5dp"
             />

        <Button
            android:id="@+id/price"
            android:layout_width="0dp"
            android:layout_weight="37"
            android:layout_height="match_parent"
            android:text="מחיר"
            android:background="#7d7d7d00"
            android:layout_marginRight="5dp"
            />




        <EditText
            android:id="@+id/phone"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="26"
            android:text=""
            android:inputType="phone"
            android:layout_marginRight="5dp"
            android:maxLength="10"
            android:background="#40eef6"/>


    </LinearLayout>

</LinearLayout>